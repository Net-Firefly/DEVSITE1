# M-Pesa Daraja API Configuration
# Get these credentials from https://developer.safaricom.co.ke/

# Daraja API Credentials (from your app on Safaricom dashboard)
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here

# Business Short Code (default 174379 for sandbox)
MPESA_SHORTCODE=174379

# Online Lipa Na M-Pesa Passkey (from Safaricom dashboard)
MPESA_PASSKEY=your_passkey_here

# Callback URL (where Safaricom sends payment confirmation)
MPESA_CALLBACK_URL=http://localhost:5000/api/mpesa-callback

# SMS Notification Configuration (Optional)
# Get free account at https://africastalking.com/
# If not configured, SMS notifications will be skipped
SMS_API_KEY=your_sms_api_key_here
SMS_USERNAME=your_sms_username_here
SMS_SENDER_ID=YourBusinessName

# Server Configuration
PORT=5000
NODE_ENV=development

# OpenAI (for KAI chatbot endpoint /api/kai-chat)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# Stripe (Server-side)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Note: Add the publishable key to your frontend environment as VITE_STRIPE_PUBLISHABLE_KEY

# Google Calendar (Service Account)
# Option A: Paste full service account JSON into the env var (single line) - JSON must be valid
# GOOGLE_SERVICE_ACCOUNT={...}
# Option B: Provide a path to service account JSON file
# GOOGLE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json
# The calendar ID is the email address of the calendar (or primary calendar of a GSuite user)
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com
# Set to 'true' to create calendar events only after payment (default: false)
GOOGLE_CALENDAR_ON_PAYMENT=false
# Timezone used for event creation (default Nairobi)
TIMEZONE=Africa/Nairobi

# Email (optional - for booking confirmations)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=you@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM="Tripple Kay Cuts" <no-reply@example.com>

